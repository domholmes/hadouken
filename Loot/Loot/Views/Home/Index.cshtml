
@{
    ViewBag.Title = "Index";
}

<!doctype html>

<html ng-app="app">
<head>
    <meta charset="utf-8">
    <title>My HTML File</title>
    
</head>
<body ng-controller="MainController">

    {{ battle.status }}<br/>
    <br/>
    <small><em>{{p1Name}}</em></small>
    <progressbar max="p1MaxLife" value="p1Life" type="danger" animate="false">Life</progressbar>
    <progressbar max="p1MaxMeter" value="p1Meter" type="info" animate="false">Wrath</progressbar>
    {{ p1Status }}<br/>
    <br/>
    <small><em>{{p2Name}}</em></small>
    <progressbar max="p2MaxLife" value="p2Life" type="danger" animate="false">Life</progressbar>
    <progressbar max="p2MaxMeter" value="p2Meter" type="info" animate="false">Wrath</progressbar>
    {{ p2Status }}<br />
</body>
</html>

@section scripts
{
    <script src="~/Scripts/model/healer.js"></script>
    <script src="~/Scripts/model/mitigator.js"></script>
    <script src="~/Scripts/model/attack.js"></script>
    <script src="~/Scripts/model/player.js"></script>
    <script src="~/Scripts/model/battle.js"></script>
    <script src="~/Scripts/viewmodels/lootViewModel.js"></script>
    <script src="~/Scripts/controllers/mainController.js"></script>
}

