<Window x:Class="Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:BlackJack.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <viewModels:MainWindowViewModel x:Key="Windows1ViewModel" />
    </Window.Resources>
    <Grid DataContext="{StaticResource Windows1ViewModel}">
        <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Content="New Game" Width="40" Height="20" Command="{Binding NewGameCommand}" />
            <Button Content="Twist" Width="40" Height="20" Command="{Binding TwistCommand}" />
            <TextBox Width="100" Height="20" Text="{Binding PlayersScore, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Width="100" Height="20" Text="{Binding GameStatus, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            <ListBox ItemsSource="{Binding PlayersHand}" />
        </StackPanel>
    </Grid>
</Window>
